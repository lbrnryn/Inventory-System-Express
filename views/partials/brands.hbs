<div class='grid gap-5 items-start'>
    <form id='brandForm' class='text-white grid items-center gap-3'>
        <input type='text' class='text-sm px-1 bg-transparent border-b w-80 outline-0' name='name' placeholder='Brand' required>
        <div class='flex justify-between items-center'>
            <div class='text-xs font-bold flex gap-2'>
            <button type='submit' class='bg-blue-700 hover:bg-blue-600 px-2 py-1 rounded-lg' id='submitEditBrandBtn'>Submit</button>
            <button type='button' class='bg-slate-700 hover:bg-slate-600 px-2 py-1 rounded-lg hidden' id='cancelEditBrandBtn'>Cancel</button>
            </div>
            <span id='brandsCount'>{{brands.length}}</span>
        </div>
    </form>
    
    <ul class='text-white text-sm' id="brandList">
        {{#each brands}}
            <li class='flex justify-between' data-id="{{this._id}}">
                {{this.name}}
                <div class='flex items-center gap-1'>
                    <button type='button' class='editBrandBtn' data-id='{{this._id}}'>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                        </svg>
                    </button>
                    <button type='button' class='deleteBrandBtn' data-id="{{this._id}}">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-red-600">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                        </svg>
                    </button>
                </div>
            </li>
        {{/each}}
    </ul>
</div>