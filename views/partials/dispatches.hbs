<div class='grid gap-5 items-start text-sm'>
    {{!-- <form id='editDispatchForm' class='grid gap-3' action='/dispatches' method='post'> --}}
    <form id='dispatchForm' class='grid gap-3'>
        <div class="grid grid-cols-2 gap-5">
            <select name='unit' required>
                <option value=''>Choose a unit...</option>
                {{#each units}}
                    <option value='{{this._id}}'>{{this.plateNumber}}</option>
                {{/each}}
            </select>
            <select name='stock' required>
                <option value=''>Choose a stock...</option>
                {{#each stocks}}
                    <option class="capitalize" value='{{this._id}}'>{{this.part.name}} ({{this.brand.name}})</option>
                {{/each}}
            </select>
        </div>
        <div class='text-white flex justify-between items-center'>
            <div class='text-xs font-bold'>
                <button type='submit' class='bg-blue-700 hover:bg-blue-600 px-2 py-1 rounded-lg'>Submit</button>
                <button type='button' class='bg-slate-700 hover:bg-slate-600 px-2 py-1 rounded-lg hidden' id='cancelEditDispatchBtn'>Cancel</button>
            </div>
            <span>{{dispatches.length}}</span>
        </div>
    </form>

    {{!-- <input type='text' class='text-white px-1 bg-transparent border-b w-auto outline-0' placeholder='Search records'> --}}
    
    <table class='border-separate border text-white text-sm'>
        <thead>
            <tr>
                <th class="border">Unit</th>
                <th class="border">Part</th>
                <th class="border">Brand</th>
                <th class="border">Qty</th>
                <th class="border w-16">Price</th>
                <th class="border w-16">Action</th>
            </tr>
        </thead>
        <tbody id="dispatchTableBody">
            {{{modifiedDispatches}}}
        </tbody>
    </table>
</div>