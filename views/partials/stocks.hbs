<div class='grid gap-5 items-start'>
    <form id='stockForm' class='grid gap-3' action='/stocks' method='post'>
        <div class='grid grid-cols-2 gap-5 text-sm'>
            <select id='stock_partName' class='' name='partname' required>
                <option value=''>Choose a part...</option>
                    {{#each uniquePartNames}}
                        <option value='{{this}}'>{{this}}</option>
                    {{/each}}
            </select>
            <input type='number' id='quantity' class='text-white px-1 bg-transparent border-b w-auto outline-0' name='quantity' placeholder='Qty.' required>
        </div>
        <div class='grid grid-cols-2 gap-5 text-sm'>
            <select id='stock_brandName' class='' name='brandname'>
                <option value=''>Choose a brand...</option>
            </select>
            <input type='number' id='price' class='text-white px-1 bg-transparent border-b w-auto outline-0' name='price' placeholder='Price' required>
        </div>
        <div class='text-white flex justify-between items-center'>
            <div class='text-xs font-bold flex gap-2'>
                <button type='submit' class='bg-blue-700 hover:bg-blue-600 px-2 py-1 rounded-lg' id='submitEditStockBtn'>Submit</button>
                <button type='button' class='bg-slate-700 hover:bg-slate-600 px-2 py-1 rounded-lg' id='cancelEditStockBtn'>Cancel</button>
            </div>
            <span>{{stocks.length}}</span>
        </div>
    </form>
    
    {{#if stocks}}
        <table class="border-separate border text-white text-sm">
            <thead>
                <tr>
                    <th class="border">Item</th>
                    <th class="border">Brand</th>
                    <th class="border w-12">Qty</th>
                    <th class="border w-16">Price</th>
                    <th class='border w-16'>Action</th>
                </tr>
            </thead>
            {{#each stocks}}
            <tr>
                <td class='border capitalize'>{{this.part.name}}</td>
                <td class='border'>{{this.part.brand}}</td>
                <td class='border text-center'>{{this.quantity}}</td>
                <td class='border text-center'>{{this.price}}</td>
                <td class='border'>
                    <div class="flex justify-around">
                        <button type='button' class='editStockBtn' data-url='/api/stocks/{{this._id}}'>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                            </svg>
                        </button>
                        <form action='/stocks/{{this._id}}?_method=DELETE' class='flex items-center deleteStockForm' method='post'>
                            <button type='submit' class=''>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-red-600">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                </svg>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
            {{/each}}
        </table>
    {{/if}}
</div>